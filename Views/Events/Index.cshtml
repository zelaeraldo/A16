                                            <button class="btn btn-sm btn-primary ticket-btn" data-event-id="3">Bileta</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Event 4 -->
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="event-card card glass-card">
                                    <img src="https://images.unsplash.com/photo-1519671482749-fd09be7ccebf?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" class="card-img-top event-img" alt="Workshop">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="badge bg-info category-badge">Workshop</span>
                                            <small class="text-muted">5 Janar 2024</small>
