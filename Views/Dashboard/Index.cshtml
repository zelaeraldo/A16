    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Sidebar navigation
            const navLinks = document.querySelectorAll('.sidebar .nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    // Remove active class from all links
                    navLinks.forEach(l => l.classList.remove('active'));

                    // Add active class to clicked link
                    this.classList.add('active');

                    // Check if this is a link that should redirect
                    if (this.getAttribute('data-section') === 'Events' ||
      
                        this.getAttribute('data-section') === 'locations') {
                        // Let the default link behavior handle the navigation
                        return;
                    }

                    e.preventDefault();
                    const section = this.getAttribute('data-section');
                    console.log(`Navigating to ${section} section`);
                    
                });
            });

            // Create Event Button
            const createEventBtn = document.getElementById('createEventBtn');
            const createEventModal = new bootstrap.Modal(document.getElementById('createEventModal'));

            createEventBtn.addEventListener('click', function() {
                createEventModal.show();
            });

            // Save Event Button
            const saveEventBtn = document.getElementById('saveEventBtn');
            saveEventBtn.addEventListener('click', function() {
                const eventTitle = document.getElementById('eventTitle').value;
                alert(`Event "${eventTitle}" u ruajt me sukses!`);
                createEventModal.hide();
                document.getElementById('eventForm').reset();
            });

            // View All Events Button
            const viewAllEventsBtn = document.getElementById('viewAllEventsBtn');
            viewAllEventsBtn.addEventListener('click', function(e) {
                e.preventDefault();
                window.location.href = "https://localhost:7060/Events";
            });

            // Event Details Buttons
            const eventDetailsBtns = document.querySelectorAll('.event-details-btn');
            const eventDetailsModal = new bootstrap.Modal(document.getElementById('eventDetailsModal'));

            eventDetailsBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const eventId = this.getAttribute('data-event-id');
                    let eventData = {};

                    if (eventId === '1') {
                        eventData = {
                            title: 'Konferenca e Teknologjisë',
                            description: 'Konferencë mbi teknologjitë e fundit në industri.',
                            category: 'Konferenca',
                            date: '10-11 Dhjetor 2023',
                            location: 'Tirana',
                            status: 'Aktiv',
                            image: 'https://images.unsplash.com/photo-1505373877841-8d25f7d46678?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80'
                        };
                    } else if (eventId === '2') {
                        eventData = {
                            title: 'Koncert i Muzikës Popullore',
                            description: 'Koncert me artistë të njohur të muzikës popullore.',
                            category: 'Koncert',
                            date: '15 Dhjetor 2023',
                            location: 'Durrës',
                            status: 'Aktiv',
                            image: 'https://images.unsplash.com/photo-1470229722913-7c0e2dbbafd3?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80'
                        };
                    }

                    document.getElementById('detailEventTitle').textContent = eventData.title;
                    document.getElementById('detailEventDescription').textContent = eventData.description;
                    document.getElementById('detailEventCategory').textContent = eventData.category;
                    document.getElementById('detailEventCategory').className = 'badge ' + (eventData.category === 'Konferenca' ? 'bg-primary' : 'bg-success');
                    document.getElementById('detailEventDate').textContent = eventData.date;
                    document.getElementById('detailEventLocation').textContent = eventData.location;
                    document.getElementById('detailEventStatus').textContent = eventData.status;
                    document.getElementById('detailEventStatus').className = 'badge bg-success';
                    document.getElementById('detailEventImage').src = eventData.image;

                    eventDetailsModal.show();
                });
            });

            // Edit Event Buttons
            const editEventBtns = document.querySelectorAll('.edit-event-btn');
            editEventBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const eventId = this.getAttribute('data-event-id');
                    alert(`Duke edituar eventin me ID: ${eventId}`);
                });
            });

            // Edit User Buttons
            const editUserBtns = document.querySelectorAll('.edit-user-btn');
            const editUserModal = new bootstrap.Modal(document.getElementById('editUserModal'));

            editUserBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const userId = this.getAttribute('data-user-id');
                    let userData = {};

                    if (userId === '1') {
                        userData = {
                            name: 'Admin User',
                            email: 'admin@example.com',
                            role: 'Admin',
                            status: 'Aktiv'
                        };
                    } else if (userId === '2') {
                        userData = {
                            name: 'Organizer User',
                            email: 'organizer@example.com',
                            role: 'Organizer',
                            status: 'Aktiv'
                        };
                    } else if (userId === '3') {
                        userData = {
                            name: 'Regular User',
                            email: 'user@example.com',
                            role: 'User',
                            status: 'Aktiv'
                        };
                    }

                    document.getElementById('userName').value = userData.name;
                    document.getElementById('userEmail').value = userData.email;
                    document.getElementById('userRole').value = userData.role;
                    document.getElementById('userStatus').value = userData.status;

                    editUserModal.show();
                });
            });

            // Save User Button
            const saveUserBtn = document.getElementById('saveUserBtn');
            saveUserBtn.addEventListener('click', function() {
                const userName = document.getElementById('userName').value;
                alert(`Përdoruesi "${userName}" u përditësua me sukses!`);
                editUserModal.hide();
            });
        });
    </script>
